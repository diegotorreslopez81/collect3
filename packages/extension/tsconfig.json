{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true
  },
  "lib": [
    "dom",
    "dom.iterable",
    "WebWorker",
    "esnext"
  ],
  "types": [
    "vite/client",
    "node"
  ],
  "include": [
    "src",
    "vite.config.mts",
    "src/manifest.ts"
  ]
}
